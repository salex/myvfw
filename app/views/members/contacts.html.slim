  .callout
    .strong eMail Addresses
    = text_area_tag nil,@email,rows:15,cols:120

  .callout
    .strong Street Addreses (all)
    = text_area_tag nil,@all_address,rows:15,cols:120

  .callout
    .strong Street Addreses (no emaill)
    = text_area_tag nil,@address,rows:15,cols:120


